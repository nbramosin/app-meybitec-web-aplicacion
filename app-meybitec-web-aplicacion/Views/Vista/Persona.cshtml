
@{
    ViewBag.Title = "Persona";
}

<fieldset class="container product-fieldset">
    <legend style="color: #9b3a4e; text-decoration: underline; text-decoration-thickness: 5px; text-underline-offset: 5px" class="mb-3 product-legend">Mantenimiento de Persona</legend>
    <form style="padding: 0 10px" id="frmMantenimientoPersona" method="post" novalidate>
        <div class="row mb-4">
            <div class="col-md-5">
                <label for="txtIdPersona" class="form-label">Id Persona:</label>
                <input type="text" id="txtIdPersona" name="id" class="form-control" readonly placeholder="Se generará automáticamente" />
                <div class="error-text" id="error-idPersona"></div>
            </div>
            <div class="col-md-6">
                <label for="txtNombre" class="form-label">Nombre:</label>
                <input id="txtNombre" name="nombre" class="form-control" />
                <div class="error-text" id="error-nombre"></div>
            </div>


        </div>
        <div class="row mb-4">
            <div class="col-md-5">
                <label for="txtApellidoPaterno" class="form-label">Apellido Paterno:</label>
                <input id="txtApellidoPaterno" name="apellidoPaterno" class="form-control" />
                <div class="error-text" id="error-apellidoPaterno"></div>
            </div>
            <div class="col-md-6">
                <label for="txtApellidoMaterno" class="form-label">Apellido Materno:</label>
                <input id="txtApellidoMaterno" name="apellidoMaterno" class="form-control" />
                <div class="error-text" id="error-apellidoMaterno"></div>
            </div>
        </div>

        <div class="row mb-4">
            <div class="col-md-5">
                <label for="txtTelefono" class="form-label">Telefono Fijo:</label>
                <input id="txtTelefono" name="telefono" class="form-control" maxlength="9" />
                <div class="error-text" id="error-telefono"></div>
            </div>

            <div class="col-md-6">
                <label for="cboTipoUsuario" class="form-label">Tipo Usuario:</label>
                <select id="cboTipoUsuario" name="idTipoUsuario" class="form-select">
                    <option value="-1">---Seleccionar---</option>
                    <!--<option value="1">Administrador</option>-->
                    @if (ViewBag.TiposUsuario != null)
                    {
                        foreach (var item in ViewBag.TiposUsuario)
                        {
                            <option value="@item.id">@item.nombre</option>
                        }
                    }

                </select>
                <div class="error-text" id="error-tipoUsuario"></div>
            </div>
        </div>
        <div class="row" style="align-items: center">
            <div class="col-md-1">
                <label for="rbMasculino" class="form-label mb-1">Masculino:</label>
            </div>
            <div class="col-md-1">
                <input type="radio" id="rbMasculino" name="genero" value="1" />
            </div>

            <div class="col-md-1">
                <label for="rbFemenino" class="form-label mb-1">Femenino:</label>
            </div>
            <div class="col-md-2">
                <input type="radio" id="rbFemenino" name="genero" value="2" />
            </div>

            <div class="col-md-1">
                <label for="chkHabilitado" class="form-label mb-1">Habilitado:</label>
            </div>
            <div class="col-md-1">
                <input type="checkbox" id="chkHabilitado" name="habilitado" value="true" />
                <!--<div class="error-text" id="error-nombreModelo"></div>-->
            </div>
        </div>
        <div class="row mb-4">
            <div class="col-md-4">
                <span id="error-genero" class="error-text"></span><!--Debe seleccionar un género-->
            </div>
        </div>

        <div class="mt-0 mb-4" style="border-top: 1px solid #dee2e6"></div>
        <section>
            <h5 style="color: #9b3a4e; text-decoration: underline; text-decoration-thickness: 5px; text-underline-offset: 5px" class="section-title mt-3 mb-1 fw-bold">Datos de Login:</h5>
            <div class="mt-0 mb-4" style="border-top: 1px solid #dee2e6"></div>
            <div class="row mb-4">
                <div class="col-md-5">
                    <label for="txtUsername" class="form-label">Nombre Usuario:</label>
                    <input id="txtUsername" name="userName" class="form-control" />
                    <div class="error-text" id="error-userName"></div>
                </div>

                <div class="col-md-6">
                    <label for="txtPassword" class="form-label">Contraseña:</label>
                    <input type="password" id="txtPassword" name="password" class="form-control" />
                    <div class="error-text" id="error-password"></div>
                </div>
            </div>
        </section>
        <section>
            <div class="mt-3" style="border-top: 1px solid #dee2e6"></div>
            <div style="display:flex" class="gap-lg-3 mt-4 justify-content-center">
                <button type="submit" id="btnGuardar" class="btn btn-primary">Guardar</button>
                <button type="reset" id="btnLimpiar" class="btn btn-danger">Limpiar</button>
            </div>
        </section>
    </form>
</fieldset>

<script src="~/Scripts/sweetalert.js"></script>
<script src="~/Scripts/generic.js"></script>
<script src="~/Scripts/Persona/mPersona.js"></script>

